
@{
    ViewBag.Title = "Index";
}

@using DrinkIt.WebApp.Models;

<style>
    h4 {
        margin-left: 15px;
        margin-top: 15px;
    }

    button {
        margin-left: 15px;
    }
</style>

@{
    string nome = ((Usuario)Session["Usuario"])?.Login ?? "Usuário Teste";
    int idCliente = ((Usuario)Session["Usuario"]).Id;
    string senhaAtual = ViewBag.SenhaAtual;
    List<Notificacao> notificacoes = ViewBag.Notificacoes ?? new List<Notificacao>();
}

<h2>Seja bem vindo, @nome</h2>

@if (notificacoes != null && notificacoes.Any())
{
    foreach (var item in notificacoes)
    {
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close deletarNotificacao" data-id="@item.Id" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @item.Descricao
        </div>
    }
}

<hr />

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#Pedidos">Meus pedidos</a></li>
    <li><a data-toggle="tab" href="#Endereco">Meus Endereços</a></li>
    <li><a data-toggle="tab" href="#Cartoes">Meus Cartões</a></li>
    <li><a data-toggle="tab" id="tabCuponsCliente" href="#Cupons">Meus Cupons</a></li>
    <li><a data-toggle="tab" href="#Telefones">Meus Telefones</a></li>
    <li><a data-toggle="tab" href="#Editar">Editar Perfil</a></li>
    <li><a data-toggle="tab" href="#Senha">Senha</a></li>
</ul>

<div class="tab-content">
    <!-- Pedidos -->
    <div class="tab-pane active" id="Pedidos">
        <div class="panel panel-default">
            <h4>Meus Pedidos</h4>
            <hr />
            @Html.Action("PvPedido", "Pedidos")
        </div>
    </div>

    <!-- Endereços -->
    <div class="tab-pane" id="Endereco">
        <div class="panel panel-default">
            <h4>Meus Endereços</h4>
            <hr />
            @Html.ActionLink("Cadastrar novo", "Create", "Endereco", null, new { @class = "btn btn-primary", @style = "margin-left:15px" })
            <hr />
            @Html.Action("PvEnderecos", "Endereco")
        </div>
    </div>

    <!-- Cartões -->
    <div class="tab-pane" id="Cartoes">
        <div class="panel panel-default">
            <h4>Meus Cartões</h4>
            <hr />
            @Html.ActionLink("Cadastrar novo", "Create", "Cartao", null, new { @class = "btn btn-primary", @style = "margin-left:15px" })
            <hr />
            @Html.Action("PvCartoes", "Cartao")
        </div>
    </div>

    <!-- Cupons -->
    <div class="tab-pane" id="Cupons">
        <div class="panel panel-default">
            <h4>Meus Cupons</h4>
            <hr />
            @Html.Action("PvCupom", "Cupons")
        </div>
    </div>

    <!-- Telefones -->
    <div class="tab-pane" id="Telefones">
        <div class="panel panel-default">
            <h4>Meus Telefones</h4>
            <hr />
            @Html.ActionLink("Cadastrar novo", "Create", "Telefones", null, new { @class = "btn btn-primary", @style = "margin-left:15px" })
            <hr />
            @Html.Action("PvTelefone", "Telefones")
        </div>
    </div>

    <!-- Editar Perfil -->
    <div class="tab-pane" id="Editar">
        <div class="panel panel-default">
            <h4>Editar Perfil</h4>
            <hr />
            @Html.ActionLink("Editar meu Perfil", "Edit", new { id = idCliente }, new { @class = "btn btn-info", @style = "margin-left:2%;margin-bottom:2%" })
        </div>
    </div>

    <!-- Senha -->
    <div class="tab-pane" id="Senha">
        <div class="panel panel-default">
            <br />
            <div class="form-horizontal">
                @using (Html.BeginForm("TrocarSenha", "Usuarios", FormMethod.Post, new { @id = "FormNovaSenha" }))
                {
                    <div class="form-group">
                        @Html.Label("Senha atual", null, new { @class = "control-label col-lg-2 col-md-2" })
                        <div class="col-lg-10 col-md-10">
                            @Html.TextBox("SenhaAtual", null, new { @class = "form-control", @id = "inputSenhaAtual", @type = "password" })
                            <label style="color:red;display:none" id="labelSenhaAtualErrada">Senha atual incorreta.</label>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Nova senha", null, new { @class = "control-label col-lg-2 col-md-2" })
                        <div class="col-lg-10 col-md-10">
                            @Html.TextBox("NovaSenha", null, new { @class = "form-control", @id = "inputNovaSenha", @type = "password" })
                            <label style="color:red;display:none" id="labelNovaSenhaFraca">A senha deve ter ao menos 8 dígitos, uma letra maiúscula, uma letra minúscula e um símbolo.</label>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Confirmar nova senha", null, new { @class = "control-label col-lg-2 col-md-2" })
                        <div class="col-lg-10 col-md-10">
                            @Html.TextBox("ConfirmarNovaSenha", null, new { @class = "form-control", @id = "inputConfirmarSenha", @type = "password" })
                            <label style="color:red;display:none" id="labelConfirmacaoErrada">A senha não foi confirmada corretamente.</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Salvar senha" class="btn btn-success" id="btnSalvarSenha" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<div id="modalExcluirTelefone" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger" style="display: flex;">
                <h3 class="modal-title">Deseja realmente apagar este telefone?</h3>
            </div>
            <div class="modal-body">
                <div>
                    <label id="labelTelefoneExcluir"></label>
                </div>

                <div>

                    <form id="FormExcluirTel" method="post" action="/Telefones/Delete/">
                        <input type="hidden" id="hiddenIdTel" name="id" />
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnConfirmaDelete" type="button" class="btn btn-danger" onclick="$('#FormExcluirTel').submit();">Apagar</button>
                <button type="button" id="cancelarDelete" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Clientes/Script_Index_Clientes.js"></script>
}