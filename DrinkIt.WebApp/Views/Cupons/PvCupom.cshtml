@model IEnumerable<DrinkIt.WebApp.Models.Cupom>

@using DrinkIt.WebApp.Models;

@{
    Layout = null;
}

@if (Model.Count() == 0)
{
    <h4 style="padding-left:1%">Nenhum cupom encontrado.</h4>
}
else
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Tipo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEmissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataExpiracao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            @if (item.IdTipo == 1)
            {
                <td>
                    Promocional
                </td>
            }
            else
            {
                <td>
                    Troca
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.DataEmissao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataExpiracao)
            </td>
            <td align="center">

                @if (((Usuario)Session["Usuario"]).Login.Equals("admin"))
                {
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            Opções <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn-warning" })</li>
                            @*<li>@Html.ActionLink("Detalhes", "Details", new { id = 1 }, new { @class = "btn-info" })</li>*@
                            <li>@Html.ActionLink("Trocar Status", "TrocarStatus", new { id = item.Id }, new { @class = "btn-primary" })</li>
                        </ul>
                    </div>
                }


            </td>
        </tr>
        }

    </table>

}
