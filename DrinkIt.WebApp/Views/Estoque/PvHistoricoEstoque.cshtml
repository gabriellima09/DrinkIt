@model IEnumerable<DrinkIt.WebApp.Models.Estoque>

@if (Model.Count() == 0)
{
    <h4 style="padding-left:1%">Nada para ver no histórico.</h4>
}
else
{
    <table class="table">
        <tr>
            <th>
                Item
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Fornecedor
            </th>
            <th>
                Data de Entrada
            </th>
            <th>
                Valor de Custo
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdBebida) - @Html.DisplayFor(modelItem => item.DescBebida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qtde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VlrCusto)
                </td>
            </tr>
        }

    </table>
}

