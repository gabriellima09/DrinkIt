@model DrinkIt.WebApp.Models.Telefone

@{
    ViewBag.Title = "Editar Telefone";
}

<h2>Editar</h2>

@using (Html.BeginForm("Edit", "Telefones", FormMethod.Post, new { @id = "FormEditTelefone" }) )
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Telefone</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("Tipo Telefone", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="IdTipo">
                    <option value="1">Residencial</option>
                    <option value="2">Celular</option>
                    <option value="3">Comercial</option>
                </select>
                @Html.ValidationMessageFor(model => model.IdTipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DDD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DDD, new { htmlAttributes = new { @class = "form-control", @id = "dddTelefone", @type = "text" } })
                <label class="control-label msgErro" style="color:red;display:none" id="msgErroDDD">Insira um DDD válido!</label>
                @Html.ValidationMessageFor(model => model.DDD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", @id = "numeroTelefone" } })
                <label class="control-label msgErro" style="color:red;display:none" id="msgErroNumero">Insira um número válido!</label>
                @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Salvar" class="btn btn-default" id="btnSalvarEditTel" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index", "Clientes", null, new { @class = "btn btn-default" })
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.12/jquery.mask.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.12/jquery.mask.min.js"></script>

    <script src="~/Scripts/Telefones/Script_Edit_Telefone.js"></script>

    <script>
        $('#dddTelefone').mask('00', { reverse: true });
        $('#numeroTelefone').mask('00000-0000', { reverse: true });
    </script>

}