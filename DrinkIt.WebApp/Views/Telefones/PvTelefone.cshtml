@model IEnumerable<DrinkIt.WebApp.Models.Telefone>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

@if (Model.Count() == 0)
{
    <h4 style="padding-left:1%">Nenhum telefone encontrado.</h4>
}
else
{

    <table class="table">
        <tr>
            <th>
                Tipo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoTipo)
                </td>
                <td>
                    (@Html.DisplayFor(modelItem => item.DDD))@Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td align="center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            Opções <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })</li>
                            <li><a class="btn btn-danger btnExcluirTelefone" data-id="@item.Id" data-numero="@item.Numero" data-ddd="@item.DDD" href="#" onclick="">Excluir</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </table>

}
